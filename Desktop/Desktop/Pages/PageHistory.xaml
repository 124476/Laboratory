<Page x:Class="Desktop.Pages.PageHistory"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Desktop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageHistory">

    <Grid>
        <DataGrid Name="DataLogs">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Пользователь" Binding="{Binding User.Login}"></DataGridTextColumn>
                <DataGridTextColumn Header="Дата и время" Binding="{Binding DateTime, StringFormat='dd/MM/yyyy hh:mm'}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
