<Window x:Class="Desktop.Windows.WindowCaptcha"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop.Windows"
        mc:Ignorable="d"
        Title="Каптча" Height="400" Width="600"
        MinHeight="400" MinWidth="600"
        Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>            
        </Grid.RowDefinitions>
        <Image Source="/Imports/fon.jpg" Stretch="UniformToFill"></Image>
        <Canvas>
            <Image Name="ImgFirst" Source="/Imports/first.png" Width="150" Canvas.Bottom="100"></Image>
            <Image Name="ImgLast" Source="/Imports/last.png" Width="150" Canvas.Bottom="100"></Image>
        </Canvas>
        <Slider Name="SliderCaptcha" ValueChanged="SliderCaptcha_ValueChanged" Grid.Row="1" Maximum="100"></Slider>
    </Grid>
</Window>
